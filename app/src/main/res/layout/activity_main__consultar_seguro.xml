<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity_ConsultarSeguro">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl__Titulo"
        android:text="Consultar seguros"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl__DescripcionSeguro"
        android:text="Descripción:"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt__DescripcionSeguro"
        android:hint="Descripción del seguro"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl__FechaSeguro"
        android:text="Fecha:"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt__FechaSeguro"
        android:inputType="date"
        android:hint="AAAA/MM/DD"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl__TipoSeguro"
        android:text="Tipo de seguro: (Casa, Auto O Médico)"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt__TipoSeguro"
        android:hint="Tipo de seguro (Casa, Auto O Médico)"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl__TelefonoPropietarioSeguro"
        android:text="Telefono del propietario:"
        android:layout_marginTop="10dp"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cmb__TelefonoPropietarioSeguro"
        android:hint="Telefono del propietario"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn__ActualizarSeguro"
        android:text="Actualizar seguro"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn__EliminarSeguro"
        android:text="Eliminar seguro"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn__RegresarSeguro"
        android:text="Regresar"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        />

</LinearLayout>